<link rel="stylesheet" href="/css/style.css">
<link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
<section class="login-section py-5" style="background-color: #5dd62c;">
  <div class="container py-5">
    <div class="row justify-content-center">
      <div class="col-md-8 col-lg-6">
        <div class="card border-0 shadow-lg">
          <div class="card-body p-5">
            <div class="text-center mb-4">
              <i class="fas fa-eye-low-vision text-primary display-4 mb-3"></i>
              <h2 class="fw-bold">Iniciar Sesión</h2>
              <p class="text-muted">Accede a tu cuenta para utilizar todas las funciones de OjoAhi</p>
            </div>
            
            <form action="/login" method="POST">
              <div class="mb-4">
                <label for="email" class="form-label">{{__ 'Email'}}</label>
                <div class="input-group">
                  <span class="input-group-text bg-light border-end-0">
                    <i class="fas fa-envelope text-muted"></i>
                  </span>
                  <input type="email" class="form-control border-start-0" id="email" name="email" placeholder="nombre@ejemplo.com" required>
                </div>
              </div>
              
              <div class="mb-4">
                <div class="d-flex justify-content-between">
                  <label for="password" class="form-label">{{__ 'Password'}}</label>
                  <a href="/forgot-password" class="text-primary small text-decoration-none">¿Olvidaste tu contraseña?</a>
                </div>
                <div class="input-group">
                  <span class="input-group-text bg-light border-end-0">
                    <i class="fas fa-lock text-muted"></i>
                  </span>
                  <input type="password" class="form-control border-start-0" id="password" name="password" placeholder="Tu contraseña" required>
                </div>
              </div>
              
              <div class="mb-4 form-check">
                <input type="checkbox" class="form-check-input" id="remember" name="remember">
                <label class="form-check-label" for="remember">Recordarme en este dispositivo</label>
              </div>
              
              <div class="mb-4">
                <button type="submit" class="btn btn-primary w-100 py-2">{{__ 'Login'}}</button>
              </div>
              
              <div class="text-center">
                <p class="mb-0">{{__ 'NoAccount'}} <a href="/register" class="text-primary">{{__ 'Register'}}</a></p>
              </div>
            </form>
            
            <div class="text-center mt-4">
              <p class="text-muted small mb-3">O inicia sesión con</p>
              <div class="d-flex justify-content-center gap-3">
                <a href="/auth/google" class="btn btn-outline-secondary">
                  <i class="fab fa-google"></i>
                </a>
                <a href="/auth/facebook" class="btn btn-outline-secondary">
                  <i class="fab fa-facebook-f"></i>
                </a>
                <a href="/auth/apple" class="btn btn-outline-secondary">
                  <i class="fab fa-apple"></i>
                </a>
              </div>
            </div>
          </div>
        </div>
        <div class="text-center mt-4">
          <p class="small text-muted">
            Al iniciar sesión, aceptas nuestros <a href="/terms" class="text-decoration-none">Términos y condiciones</a> y <a href="/privacy" class="text-decoration-none">Política de privacidad</a>.
          </p>
        </div>
      </div>
    </div>
  </div>
</section>




