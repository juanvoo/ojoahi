<link rel="stylesheet" href="/css/styles.css">
<h1>Lista de Voluntarios</h1>

{{#if volunteers.length}}
  <div class="volunteer-list">
    {{#each volunteers}}
      <div class="volunteer-card">
        <h2>{{this.username}}</h2>
        <p>Email: {{this.email}}</p>
        <a href="/request-help/{{this.id}}" class="btn">Solicitar ayuda</a>
      </div>
    {{/each}}
  </div>
{{else}}
  <p>No hay voluntarios disponibles en este momento.</p>
{{/if}}

<a href="/blind-dashboard" class="btn">Volver al Dashboard</a>