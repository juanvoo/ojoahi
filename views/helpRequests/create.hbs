<h1>Solicitar Ayuda</h1>

<div class="card mb-4">
  <div class="card-body">
    <form action="/help-requests/create" method="POST">
      {{#if volunteer}}
        <div class="form-group mb-3">
          <label for="volunteer_id">Voluntario:</label>
          <input type="text" class="form-control" value="{{volunteer.username}}" readonly>
          <input type="hidden" name="volunteer_id" value="{{volunteer.id}}">
        </div>
      {{else}}
        <div class="form-group mb-3">
          <label for="volunteer_id">Seleccionar Voluntario (opcional):</label>
          <select name="volunteer_id" id="volunteer_id" class="form-control">
            <option value="">Seleccione un voluntario (opcional)</option>
            {{#each volunteers}}
              <option value="{{this.id}}">{{this.username}}</option>
            {{/each}}
          </select>
        </div>
      {{/if}}

      <div class="form-group mb-3">
        <label for="date">Fecha:</label>
        <input type="date" name="date" id="date" class="form-control" required>
      </div>

      <div class="form-group mb-3">
        <label for="time">Hora:</label>
        <input type="time" name="time" id="time" class="form-control" required>
      </div>

      <div class="form-group mb-3">
        <label for="description">Descripci√≥n de la ayuda que necesitas:</label>
        <textarea name="description" id="description" class="form-control" rows="4" required></textarea>
      </div>

      <button type="submit" class="btn btn-primary">Enviar Solicitud</button>
      <a href="/users/dashboard" class="btn btn-secondary">Cancelar</a>
    </form>
  </div>
</div>