<h2>{{__ 'MakeReservation'}}</h2>
<form action="/reservations/create" method="POST" class="reservation-form">
  <div>
    <label for="date">{{__ 'Date'}}:</label>
    <input type="date" id="date" name="date" required>
  </div>
  <div>
    <label for="time">{{__ 'Time'}}:</label>
    <input type="time" id="time" name="time" required>
  </div>
  <div>
    <label for="volunteer">{{__ 'Volunteer'}}:</label>
    <select id="volunteer" name="volunteerId" required>
      {{#each volunteers}}
        <option value="{{this.id}}">{{this.name}}</option>
      {{/each}}
    </select>
  </div>
  <div>
    <label for="description">{{__ 'Description'}}:</label>
    <textarea id="description" name="description" required></textarea>
  </div>
  <div>
    <label for="isVideoCall">
      <input type="checkbox" id="isVideoCall" name="isVideoCall">
      {{__ 'RequestVideoCall'}}
    </label>
  </div>
  <button type="submit">{{__ 'Submit'}}</button>
</form>