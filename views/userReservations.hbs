<h2>Mis Reservas</h2>
{{
#if
 reservations.length}}
  <table class="table">
    <thead>
      <tr>
        <th>Voluntario</th>
        <th>Fecha</th>
        <th>Hora</th>
        <th>Estado</th>
        <th>Acciones</th>
      </tr>
    </thead>
    <tbody>
      {{
#each
 reservations}}
        <tr>
          <td>{{this.volunteerName}}</td>
          <td>{{formatDate this.date}}</td>
          <td>{{this.time}}</td>
          <td>{{this.status}}</td>
          <td>
            <a href="/reservations/{{this.id}}/edit" class="btn btn-sm btn-primary">Editar</a>
            <form action="/reservations/{{this.id}}/cancel" method="POST" style="display:inline;">
              <button type="submit" class="btn btn-sm btn-danger">Cancelar</button>
            </form>
          </td>
        </tr>
      {{
/each
}}
    </tbody>
  </table>
{{else}}
  <p>No tienes reservas actualmente.</p>
{{
/if
}}
<a href="/reservations/new" class="btn btn-success">Nueva Reserva</a>